@model MujeresEmpoderadas.Models.Contactanos

@{
    ViewBag.Title = "Contactanos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="addthis_inline_share_toolbox"></div>

<h2>Contáctanos</h2>
<h4>Nos interesa conocer tu opinión, déjanos tus comentarios, dudas o sugerencias.</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="Nombre">
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="CorreoElectronico" name="CorreoElectronico" placeholder="Correo electrónico">
        @Html.ValidationMessageFor(model => model.CorreoElectronico, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <textarea id="Comentarios" name="Comentarios" class="form-control" rows="3" placeholder="Comentarios"></textarea>
        @Html.ValidationMessageFor(model => model.Comentarios, "", new { @class = "text-danger" })
    </div>
    
    <input type="submit" value="Enviar" class="btn btn-default" />
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
